<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://js.pusher.com/8.4.0/pusher.min.js"></script>  <!--for notification-->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"rel="stylesheet"/>
    <title>Admin Index</title>
  </head>
  <body>
    
    <main class="p-6 bg-gray-900 min-h-screen w-screen">

            <!-- Role -->
            <div class="bg-white-500 hover:bg-blue-800 top-1 right-6 absolute text-white text-2xl rounded-lg p-2" >
                <h1>Role: <%= role %></h1>
            </div>

            <!-- username and email -->
            <div class="bg-gray-600 w-fit rounded-lg px-4 py-2" >
                <h1 class="text-white">User: <%= username %></h1>
                <p class="text-white">Email: <%= email %></p>
            </div>
            <br>

            
            <!--/routes/logout-->
            <div>
                <form action="/Sign-out" method="get" >  
                    <button class="bg-red-500 hover:bg-red-800 top-15 right-8 absolute text-white text-1xl rounded-lg p-2">logout</button>
                </form>
            </div>


            <!-- Users div -->
            <div class="p-4">
                                
                    <div class="flex items-center gap-4">
                        <!-- Users text -->
                        <div class="text-white text-2xl">
                            Users
                        </div>

                        <!-- Add User button -->
                            <button onclick="window.location.href='/admin/<%= username %>/add-user' " class="bg-green-700 text-white font-bold py-2 px-4 rounded dark:hover:bg-green-600 dark:border-green-600 border flex items-center gap-2">
                                <!-- plus icon -->
                                <svg class="w-4 h-4 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 1v16M1 9h16"/>
                                </svg>
                                <!-- text -->
                                <span>Add User</span>
                            </button>
                        
                    </div>

                
               
                <!-- Users List -->
               <ul class="mt-3 p-3 border rounded bg-gray-600">
                    <li class="grid grid-cols-3  p-2 font-bold text-gray-200 border-b">
                        <span>Username</span>
                        <span>Email</span>
                    </li>
                    <% alluser.forEach(user => { %>
                        <li class="grid grid-cols-3 p-2 border-b last:border-b-0 text-white">
                            
                            <span><%= user.username %></span>
                            <span><%= user.email %></span>

                            <!-- Delete -->
                            <div class="flex gap-5">

                                  <!-- Edit button -->
                                <button onclick="document.getElementById('update-<%= user._id %>').classList.toggle('hidden')" class="bg-yellow-600 px-3 py-1 rounded text-white">
                                    Edit
                                </button>
                                 <!-- Delete user with button-->
                                <button class="bg-red-600 text-white px-3 py-1 rounded" onclick="showPopUp('<%= user._id %>')">
                                    Delete
                                </button>

                                <!-- Delete popup -->
                                <div id="delete-<%= user._id %>" class="hidden backdrop-blur flex items-center justify-center h-screen w-screen fixed top-0 left-0  gap-5"> 
                                    <p> Are You Sure Delete '<%= user.username %>' ?</p> 
                                    <form action="/delete-user/<%= user._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="bg-blue-600 px-3 py-1 rounded text-white">
                                            yes
                                        </button>
                                    </form>
                                    <button class="bg-blue-600 px-3 py-1 rounded text-white" onclick="hiddenPopUp('<%= user._id %>')">
                                            No
                                    </button>
                                </div>
                     
                            </div>

                             <!-- Edit form -->
                            <div>
                                <form id="update-<%= user._id %>" action="/update-user/<%= user._id %>?_method=PATCH" method="POST" class="hidden mt-2">
                                    <input type="text" name="username" placeholder="username" class="px-2 py-1 rounded text-black" />
                                    <input type="email" name="email" placeholder="email" class="px-2 py-1 rounded text-black" />
                                    <button type="submit" class="bg-blue-600 px-3 py-1 rounded text-white">Save</button>
                                </form> 
                            </div>

                        </li>  
 
                    <% }) %>

                </ul>

            </div>

        
         
                
            <!-- Notification -->
            <div id="notification"  class="hidden fixed top-4 left-150 bg-white text-red-500 px-2 py-4 rounded-lg shadow-md text-center z-50">
            
            </div>
  
            
    </main>

    <script>


        // Delete Confirmation
        function showPopUp(id){
            const x = document.getElementById(`delete-${id}`)
            x.classList.remove("hidden")
        }
        function hiddenPopUp(id){
            const y = document.getElementById(`delete-${id}`)
            y.classList.add("hidden")
        }

        
        //pusher---------------------------------------------------
        Pusher.logToConsole = true;
        // obj create with (key)
        const pusher = new Pusher('62ee3b1c9692423af804', {
            cluster: 'ap1'
        });
        
        // channel subscribe
        const channel = pusher.subscribe('notification-channel');
        //channel trigger after subscribe
        channel.bind('pusher:subscription_succeeded', function () {
        // Trigger backend to send the event now
        fetch("/trigger-notification", {
            method: "POST",
            credentials: "include"
        });

        // event trigger
        channel.bind('notification-event', function(data) {
        notify(data.message);
        console.log("Notification received:", data);
        });

        function notify(msg) {
            const el = document.getElementById("notification");
            el.innerHTML = msg;
            el.classList.remove("hidden");  // show

            setTimeout(() => {
                el.classList.add("hidden");  // hide
            }, 4000);
        }
        // -----------------------------------------------------

 
            





            
     });


    </script>
            
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  </body>
</html>